<!DOCTYPE html>
<html lang="<%= currentLocale %>">
  <%-
    include('../partials/head', {
      title: 'Haengbok Hanteo - Contact Us',
      head: null
    })
  %>
  <body class="bg-stone-50"> 
    <%- /* include('./partials/_loader') */ %>
    <%- include('../partials/header') %>
    <main class="relative">
      <section class="relative z-[1] h-60 px-4 md:px-6 py-4">

        <div class="absolute -z-[1] w-[calc(100%-2rem)] md:w-[calc(100%-3rem)] h-[calc(100%-2rem)] rounded-lg overflow-hidden">
          <img src="/img/building-1.jpg" class="w-full h-full object-cover brightness-70">
        </div>

        <div class="text-white w-full h-full flex-col-center gap-4 text-center px-2">
          <h1 class="text-4xl md:text-5xl font-semibold">
            <%= __('thankYou') %>
          </h1>
        </div>
      </section>

      <section id="contact-form" class="px-4 py-4 md:px-10">
        <div class="mt-10 flex-col-center">
          <h2 class="text-2xl md:text-3xl font-semibold text-center">
            <%= __('messageSent') %>
          </h2>

          <div class="mt-10 flex-center gap-2">
            <button data-back-btn class="btn secondary rounded-md flex items-center gap-2">
              <span class="pi pi-replay"></span>
              <span class="translate-y-[1px]"><%= __('back') %></span>
            </button>

            <a href="/">
              <button class="btn primary rounded-md flex items-center gap-2">
                <span class="pi pi-home"></span>
                <span class="translate-y-[1px]"><%= __('home') %></span>
              </button>
            </a>
          </div>
        </div>
      </section>
    </main>
    <%- include('../partials/footer') %>

    <%- include('../partials/scripts') %>
  </body>
</html>